<div class="row container-article article article-detail">
	<div class="col-md-12">
        <img class="article-detail-image image-vertical" style="background-image:url({{data.url_image}});" alt="" width="100%">
    <div class="article-title article-detail-title">{{data.title}}</div>
	<div class="article-author article-detail-author">{{data.date}} - {{data.author}}</div>
        {% if data.blockquote %}
		<blockquote class="article-blockquote article-detail-blockquote">
   			{{data.blockquote}}
   		</blockquote>
	    {% endif %}
        <div class="article-subtitle article-detail-subtitle">
			{{data.subtitle}}
	    </div>
        <p class="text-justify">	
            {{data.description}}
        </p>
	</div>
</div>

{% for item in data.blocks %}
<div class="row container-article article article-detail">
	<div class="col-md-12">
        {% if item.url_image %}
            <img class="article-detail-image {{item.image_class}}" style="background-image:url({{item.url_image}});" alt="" width="100%">
        {% endif %}
        {% if item.blockquote %}
		<blockquote class="article-blockquote article-detail-blockquote">
   			{{item.blockquote}}
   		</blockquote>
	    {% endif %}
        {% for p in item.parragraphs %}
        <p class="text-justify">	
            {{p}}
        </p>
        {% endfor %}
	</div>
</div>
{% endfor %}