{% for item in items %}
<div class="row container-article">
    <div class="col-sm-4 col-md-4">
        <img class="article-image" style="background-image:url({{item.url_image}});" alt="" width="100%">
    </div>
    <div class="col-sm-8 col-md-8">
        <div class="row article">
            <div class="col-lg-12">
                <div class="article-title">{{item.title}}</div>
                <div class="article-author">{{item.date}} - {{item.author}}</div>
                <div class="article-subtitle">
                    {{item.subtitle}}
                </div>
                <p class="text-justify">
                    {{item.description}}
                </p>
                 <blockquote class="article-blockquote">
                    {{item.blockquote}}
                </blockquote>
                {% if item.link %}
                <p class="read-more"><a href="{{item.link}}">{{link}}</a></p>
                {% endif %}
				{% if item.tour %}
					<p class="read-more"><a href="{{item.tour}}">{{sTour}}</a></p>
				{% endif %}
            </div>
      
        </div>

    </div>
</div>
{% endfor %}